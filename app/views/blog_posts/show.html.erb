<div class="max-w-3xl mx-auto py-8 px-4 sm:px-6">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-slate-700">Post Details</h1>
        <% if user_signed_in? %>
        <%= link_to "Edit Post", edit_blog_post_path(@blog_post), 
            class: "text-indigo-600 hover:text-indigo-800 hover:underline" %>
        <% end %>
    </div>
    <h2 class="text-3xl font-bold text-slate-800 mb-4"><%= @blog_post.title %></h2>
    <div class="prose max-w-none text-slate-600">
        <%= @blog_post.body %>
    </div>
    <div class="mt-8">
        <%= link_to "← Back to all posts", blog_posts_path, 
          class: "text-indigo-600 hover:text-indigo-800 hover:underline" %>
    </div>
</div>